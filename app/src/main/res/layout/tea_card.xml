<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="135dp"
    android:layout_height="wrap_content"
    android:id="@+id/cardLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="12dp"
    android:orientation="vertical"
    android:background="@drawable/tea_card_shape_color1">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:elevation="0dp"
        app:cardCornerRadius="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imTea"
            android:layout_width="105dp"
            android:layout_height="105dp"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardTea"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="8dp"
        android:text="Test text"
        android:textColor="#929f8c"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/tvPrice"
        android:layout_below="@+id/tvName"
        android:textSize="25dp"
        android:textColor="#1b2318"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/weightIcon"
        android:layout_below="@id/tvPrice"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/weight"
        android:layout_width="15dp"
        android:layout_height="15dp"
        />
    <TextView
        android:id="@+id/tvWeight"
        android:layout_below="@id/tvPrice"
        android:layout_toRightOf="@+id/weightIcon"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>